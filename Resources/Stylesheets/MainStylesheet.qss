QMainWindow
{
    background-color: rgb(10, 10, 10);
}

QWidget 
{
    background-color: none;
    color: #d4d4d4;
    font-size: 13pt;
    border-radius: 0px;
}

QLabel
{
    background-color: none;
}

#MidiDeviceSelectionWidget, 
#MidiDeviceEntryWidget
{
    background-color: rgb(20, 20, 25);
    border-radius: 10px;
}

#MidiDeviceInfo
{
    background-color: rgb(10, 10, 15);
}

#MidiLogger 
{
    background-color: rgb(10, 10, 15);
}

#SelectedMidiDeviceLabel
{
    font-size: 30px;
    font-weight: bold;
    padding: 0;
}

#SelectedMidiDeviceEditorFrame
{
    background-color: rgb(20, 20, 25);
}

/* Menu (System Tray) */

QMenu::item
{
    padding: 5px 25px;
    border-radius: 10px;
}

QMenu::item:selected 
{
    background-color: rgb(30, 30, 35);
}

/* ComboBox */

QComboBox 
{
    background-color: rgb(30, 30, 40);
    border-radius: 10px;
    padding: 4px 8px 4px 8px;
}

QComboBox QAbstractItemView 
{
    background-color: rgb(25, 25, 35);
    border-radius: 5px;
    padding: 5px 5px 5px 5px;
}

/* TableWidget */

QTableWidget 
{
    background: transparent;
}

/* PushButton */

QPushButton 
{
    background-color: rgb(30, 30, 55);
    border: 0px;
    padding: 3px 8px;
    border-radius: 4px;
}

QPushButton:hover 
{
    background-color: rgb(45, 45, 70);
    border-radius: 6px;
}

 QPushButton#RecordButton
{
    background-color: rgb(115, 90, 30);
}

QPushButton#RecordButton:hover 
{
    background-color: rgb(90, 30, 30);
}

QPushButton#RecordButton:checked 
{
    background-color: rgb(90, 30, 30);
}

QPushButton#SaveProfileButton
{
    background-color: rgb(15, 90, 20);
}

QPushButton#SaveProfileButton:hover 
{
    background-color: rgb(30, 105, 35);
}

/* Checkbox */

QCheckBox 
{
	padding: 6px;
}

QCheckBox:hover 
{
	border-radius:8px;
	padding: 6px;
	background-color:qlineargradient(spread:pad, x1:0.5, y1:1, x2:0.5, y2:0, stop:0 rgba(190, 90, 50, 50), stop:1 rgba(250, 130, 40, 50));
}

QCheckBox::indicator:checked 
{
	border:1px solid rgb(246, 134, 86);
	border-radius:4px;
  	background-color:rgb(246, 134, 86)
}

QCheckBox::indicator:unchecked 
{
	border-width:1px solid rgb(246, 134, 86);
	border-radius:4px;
  	background-color:rgb(255,255,255);
}