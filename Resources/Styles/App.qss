QMainWindow
{
    background-color: rgb(10, 10, 10);
}

QWidget 
{
    /* background-color: rgb(10, 10, 10); */
    background-color: none;
    color: #d4d4d4;
    font-family: 'Segoe UI', sans-serif;
    font-size: 13pt;
    border-radius: 10px;
}

QLabel
{
    background-color: none;
}

#MidiDeviceSelectionWidget, 
#MidiDeviceEntryWidget
{
    background-color: rgb(20, 20, 25);
}

#MidiDeviceInfoFrameWidget, 
#MidiLoggerFrameWidget
{
    background-color: rgb(15, 15, 20);
}

#SelectedMidiDeviceLabel
{
    font-size: 30px;
    font-weight: bold;
    padding: 0;
}

#SelectedMidiDeviceEditorFrameWidget
{
    background-color: rgb(20, 20, 25);
}

/* Menu (System Tray) */

QMenu::item
{
    padding: 5px 25px;
    border-radius: 10px;
}

QMenu::item:selected 
{
    background-color: rgb(30, 30, 35);
}

/* ComboBox */

QComboBox 
{
    background-color: rgb(30, 30, 40);
    selection-background-color: rgb(30, 30, 40);
    border-radius: 5px;
    padding: 4px 28px 4px 8px;
}

QComboBox QAbstractItemView 
{
    background-color: rgb(15, 15, 25);
    border-radius: 5px;
}

/* TableWidget */

QTableWidget 
{
    background: transparent;
}

/* PushButton */

QPushButton 
{
    background-color: rgb(30, 30, 55);
    border: 0px;
    padding: 3px 8px;
    border-radius: 4px;
}

QPushButton:hover 
{
    background-color: rgb(45, 45, 70);
    border-radius: 6px;
}

QPushButton#DeleteButton
{
    background-color: rgb(80, 30, 30);
}

QPushButton#DeleteButton:hover 
{
    background-color: rgb(95, 45, 45);
}

QPushButton#SaveProfileButton
{
    background-color: rgb(15, 90, 20);
}

QPushButton#SaveProfileButton:hover 
{
    background-color: rgb(30, 105, 35);
}